def task1():
    n = int(input("Сколько строк треугольника Паскаля вы хотите видеть: "))
    while n < 0:
        print('Отрицательной строчки треугольника паскаля не существует')
        n = int(input())


    def next_row(row):
        row = [1] + row
        for i in range(1, len(row) - 1):
            row[i] += row[i + 1]
        return row


    row = []

    for i in range(1, n + 1):
        row = next_row(row)
        print(row)

def task2():
    s = str(input("Введите строку: "))
    palindrome = ''  # создаем строку, содержашую самую длинную подсторку-палиндром
    max_length = 0  # создаем число, содержащее длину самой длинной подстроки-полиндрома
    for i in range(len(s)):
        for j in range(i + 1, len(s) + 1):
            sub = s[i:j]  # создаем переменную, которая проходится через каждую возможную подстроку строки
            if sub == sub[::-1] and len(sub) > max_length:  # проверка подстроки на полиндром и на максимальную длину
                max_length = len(sub)
                palindrome = sub
    print('Самый длинный полиндром в строке:', palindrome)  # выводим итоговую подстроку, которая является самым длинным полиндромом

def task3():
    n = int(input("Введите количество строк первой матрицы: "))
    m = int(input("Введите количество столбцов первой матрицы: "))  # Вводим количество строк и столбцов первой матрицы
    k = int(input("Введите количество строк второй матрицы: "))
    h = int(input("Введите количество столбцов второй матрицы: "))  # Вводим количество строк и столбцов второй матрицы
    if m != k:  # Проверяем, можно ли выполнить умножение матриц
        print("Неверные размеры матриц")
    else:
        result = [[0 for i in range(h)] for i in range(n)]  # Создаем пустую итоговую матрицу
        print("Введите элементы первой матрицы:")  # Вводим элементы первой матрицы
        matrix1 = []
        for i in range(n):
            row = list(map(int, input().split()))
            matrix1.append(row)
        print("Введите элементы второй матрицы:")  # Вводим элементы второй матрицы
        matrix2 = []
        for i in range(k):
            row = list(map(int, input().split()))
            matrix2.append(row)
        for i in range(n):
            for j in range(h):
                for x in range(k):
                    result[i][j] += matrix1[i][x] * matrix2[x][j]  # Выполняем умножение матриц
        print("Итоговая матрица:")
        for i in result:
            for j in i:
                print(j, end=" ")
            print()  # Выводим результат



n = int(input("Введите номер задания, которое хотите проверить или введите 0, если хотите завершить проврку: "))
while True:
    if n == 1:
        task1()
        n = int(input("Введите номер задания, которое хотите проверить или введите 0, если хотите завершить проврку: "))
    if n == 2:
        task2()
        n = int(input("Введите номер задания, которое хотите проверить или введите 0, если хотите завершить проврку: "))
    if n == 3:
        task3()
        n = int(input("Введите номер задания, которое хотите проверить или введите 0, если хотите завершить проврку: "))
    if n == 0:
        break
    else:
        n = int(input('Кажется, вы ввели что-то не то, попробуйте еще раз: '))
